.container {
      background-image: url('https://cosrun.sindcorp.net/cosrun_img/bg-pay.jpg');
      background-size: 100% auto;
      color: #333;
      width: 100%;
      height: 100%;
      padding: 30rpx 0;
}

.photo {
      width: 84%;
      margin-top: 12%;
      box-shadow: 0 0 30rpx #fff;
      border-radius: 10rpx;
      overflow: hidden;
}
.photo image{
      max-height: 480rpx;
       height:460rpx;
}

.btn-pay {
      margin-top: 20rpx;
      width: 50%;
}

.t1 {
      font-size: 52rpx;
      font-weight: 700;
      color: #fff;
      padding-top: 70rpx;
}

.t2 {
      color: #fff;
      font-size: 28rpx;
}

.t2 text {
      font-size: 96rpx;
      color: #f9db20;
      font-weight: 700;
}

/* 付费成功 */

.pay-success {
      box-sizing: border-box;
      padding: 0 80rpx;
}

.pay-success .solgan {
      width: 100%;
      margin-top: 2%;
}

.pay-success .poster {
      width: 80%;
      margin-top: -30rpx;
      z-index: -1;
}

.pay-success .notice {
      width: 80%;
      line-height: 1.2;
}

.pay-success .btn-home {
      width: 60%;
}

.btn-save {
      width: 24%;
      background: #fcd703;
      border: 4rpx solid #313c58;
      border-radius: 10rpx;
      height: 66rpx;
      font-size: 30rpx;
      line-height: 60rpx;
      position: absolute;
      top: 62%;
      left: 38%;
}

.panel {
      width: 98%;
      height: 57%;
      background: url('https://cosrun.sindcorp.net/cosrun_img/bg-popUp.png');
      background-size: 100% 100%;

}
.panel  .start{
      width: 160rpx;
      padding-bottom:50rpx;
}
.panel  .btn-home{
      width: 360rpx;
      padding-top: 60rpx;
}