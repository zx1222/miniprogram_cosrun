.container {
      width: 100%;
      height: 100%;
      background-image: url('http://ccrt.h5.sindcorp.net/asset/cosrun/bg-user.png');
      background-size: 100% 100%;
      color: #333;
      padding: 0 40rpx;
      box-sizing: border-box;
}

.list-wrp {
      height: 63%;
      overflow-y: scroll;
}

.item {
      background: #fcd703;
      border: 4rpx solid #333;
      box-sizing: border-box;
      margin-bottom: 20rpx;
      border-radius: 10rpx;
}

.item.msg {
      background: #fff;
      box-sizing: border-box;
      margin-bottom: 20rpx;
      border-radius: 10rpx;
      padding: 16rpx 20rpx;
      border: none;
}

.item .header {
      padding: 12rpx;
      box-sizing: border-box;
}

.item.msg .header {
      padding: 12rpx 0;
      border-bottom: 1px solid #dcdcdc;
}

.item.question .header .fa {
      font-size: 40rpx;
      transform: rotateX(180deg)
}
.item.question.slideUp .header .fa {
      font-size: 40rpx;
      transform: rotateX(0deg)
}


.item .header .address {
      font-size: 30rpx;
      font-weight: 700;
}

.item .content {
      box-sizing: border-box;
      padding: 20rpx 12rpx;
      background: #fff;
      border-radius: 0 0 10rpx 10rpx;
      font-size: 24rpx;
      word-break: break-all;
      transition: all 0.3s;
      -webkit-transition: all 0.2s;
}

.item.question .content {
      padding: 20rpx 12rpx;
}

.item.question.slideUp .content {
      padding: 0rpx 12rpx;
      height: 0;
      overflow: hidden;
}
.btn-reUpload {
      width: 35%;
      background: #fcd703;
      border: 4rpx solid #333;
      font-size: 28rpx;
}