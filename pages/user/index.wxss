.container {
      width: 100%;
      height: 100%;
      background-image: url('http://cosrun.statics.miinno.cn/cosrun_img/bg-user.png');
      background-size: 100% 100%;
      color: #333;
      padding: 0 40rpx;
      box-sizing: border-box;
}

.header {
      border-bottom: 1px solid #dcdcdc;
}

.avatar {
      width: 175rpx;
      height: 175rpx;
      border-radius: 50%;
      overflow: hidden;
}

.nickname {
      font-size: 40rpx;
      color: #fff;
      letter-spacing: 4px;
      padding-bottom: 40rpx;
}

.btn-sign-wrp {
      padding-bottom: 40rpx;
}

.btn-sign-wrp .btn {
      width: 200rpx;
      height: 50rpx;
      border-radius: 15%/50%;
      background: #f9db20;
      line-height: 50rpx;
      font-size: 24rpx;
}

/* .entrance-wrp:after {
  content: "";
  flex: auto;
} */

.entrance-wrp .entrance {
      width: 30%;
      margin-bottom: 16rpx;
      position: relative;
}

.entrance-wrp .entrance .logo {
      position: absolute;
      width: 50%;
      left: 25%;
      top: 8%;
}

.entrance-wrp .entrance .logo.logo2 {
      width: 52%;
      left: 24%;
}

.entrance-wrp .entrance .logo.logo3 {
      width: 42%;
      left: 29%;
}

.entrance-wrp .entrance text {
      position: absolute;
      width: 80%;
      left: 10%;
      top: 66%;
      font-size: 24rpx;
      text-align: center;
      line-height: 1.2;
}

.entrance-wrp .entrance4 .logo,
.entrance-wrp .entrance5 .logo {
      top: 14%;
      width: 46%;
      left: 27%;
}

.entrance-wrp .entrance6 .logo {
      top: 13.5%;
      width: 42%;
      left: 29%;
}

.entrance-wrp .entrance7 .logo {
      top: 14%;
      width: 44%;
      left: 28%;
}

.entrance-wrp .entrance:nth-child(4) text,
.entrance-wrp .entrance:nth-child(5) text,
.entrance-wrp .entrance:nth-child(6) text,
.entrance-wrp .entrance:nth-child(7) text {
      bottom: 19%;
}

.btn-home {
      width: 54%;
      margin-left: 23%;
}

.entrance .bubble {
      position: absolute;
      top: -7%;
      right: -7%;
      background: red;
      color: #fff;
      width: 40rpx;
      height: 40rpx;
      font-size: 24rpx;
      border-radius: 50%;
      text-align: center;
      line-height: 40rpx;
      font-weight: 700;
}
