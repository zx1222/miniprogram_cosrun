.container {
      width: 100%;
      height: 100%;
      background-image: url('http://cosrun.wxa.miinno.cn/cosrun_img/bg-user.png');
      background-size: 100% 100%;
      color: #333;
      padding: 0 40rpx;
      box-sizing: border-box;
}

.cashback {
      height: auto;
      background-image: url('http://cosrun.wxa.miinno.cn/cosrun_img/bg-cashback.png');
      background-size: 100% 100%;
}

.list-wrp {
      height: 66%;
      overflow-y: scroll;
}

.has-photo-l {
      width: 34%;
      margin-right: 1%;
}

.has-photo-r {
      width: 65%;
}

.no-photo-r {
      width: 100%;
}

.item {
      background: #fcd703;
      border: 4rpx solid #333;
      box-sizing: border-box;
      margin-bottom: 20rpx;
      border-radius: 14rpx;
}

.item.msg {
      background: #fff;
      box-sizing: border-box;
      margin-bottom: 20rpx;
      border-radius: 14rpx;
      padding: 16rpx 20rpx;
      border: none;
}

.item .header {
      padding: 6rpx 12rpx;
      box-sizing: border-box;
}

.item.msg .header {
      padding: 12rpx 0;
      border-bottom: 1px solid #dcdcdc;
}

.item.msg.notice .header {
      padding: 12rpx 0;
      border-bottom: none;
}

.item.notice .header .fa {
      font-size: 40rpx;
}

.item.notice {
      position: relative;
}

.item.notice .notRead {
      position: absolute;
      width: 20rpx;
      height: 20rpx;
      border-radius: 50%;
      background: red;
      top: 8%;
      right: 2%;
}

.item.question.slideUp .header {
      border: none;
}

.item.question .header .fa {
      font-size: 40rpx;
      transform: rotateX(180deg);
}

.item.question.slideUp .header .fa {
      font-size: 40rpx;
      transform: rotateX(0deg);
}

.item .header .address {
      font-size: 30rpx;
      font-weight: 700;
}

.item .content {
      box-sizing: border-box;
      padding: 20rpx 14rpx;
      background: #fff;
      border-radius: 0 0 14rpx 14rpx;
      font-size: 24rpx;
      word-break: break-all;
      transition: all 0.3s;
      -webkit-transition: all 0.2s;
      position: relative;
}
.item .content.run{
         padding: 20rpx 26rpx;
}

.item .content .col {
      width: 45%;
}

.item .content  .logo-user{
      position: absolute;
      width: 110rpx;
      right: 2%;
      bottom: 3%;
}
.item .content  .logo-user.run{
      position: absolute;
      width: 110rpx;
      right: 2%;
      top: 3%;
}
.item.comico .content{
      padding: 28rpx 52rpx 34rpx 58rpx;
}
.item.comico .content .col{
      width: 58%
}
.item.comico .content .logo-user{
        width: 140rpx;
}
.item.question .content {
      padding: 20rpx 12rpx;
}

.item.question.slideUp .content {
      padding: 0rpx 12rpx;
      height: 0;
      overflow: hidden;
}


.item .content .col image {
      width: 97%;
}

.item .content .col .row {
      padding: 6rpx 0;
}
.item .content  .row.time{
      width: 82%;
}
.item .content .photo {
      width: 92%;
      overflow: hidden;
      line-height: 0;
}

.item .content .photo image {
      border-radius: 10rpx;
}

.item .content .address {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
}

.invite-count {
      letter-spacing: 4px;
      padding: 30rpx 0;
      font-size: 40rpx;
}

.poster {
      display: block;
      width: 66%;
      box-shadow: 0 0 30rpx #fff;
}

.btn-toPay{
      border: 3px solid #cf1e76;
      border-radius: 12rpx;
      /* width: 60%; */
      margin-top: 20rpx;
      padding: 0 10rpx;
      height: 54rpx;
      line-height: 42rpx;
      /* margin-left: 20%; */
      color: #cf1e76;
      text-align: center;
}

.qrCode {
      width: 70%;
}

.notice-code {
      position: absolute;
      font-weight: 800;
      color: #f9db20;
      letter-spacing: 5px;
      font-size: 34rpx;
      width: 100%;
      text-align: center;
      padding-top: 8rpx;
      position: relative;
}

.notice-code::before {
      content: attr(data-text);
      position: absolute;
      width: 100%;
      left: 0;
      -webkit-text-stroke: 16rpx #8b2ba0;
      text-align: center;
}

.notice-code::after {
      content: attr(data-text);
      position: absolute;
      width: 100%;
      left: 0;
      text-align: center;
      -webkit-text-stroke: 2rpx #f9db20;
}
