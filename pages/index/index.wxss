.container {
      background-image: url('https://cosrun.sindcorp.net/cosrun_img/bg-index.png');
      background-size: 100% 100%;
      height: 100%;
}

.header {
      height: 145rpx;
      position: relative;
      padding: 0 12px;
      box-sizing: border-box;
}

image {
      display: inline-block;
}

.logo {
      width: 71%;
      padding-bottom: 16rpx;
}

.btn-user {
      width: 12%;
      transform-origin: top center;
      animation: swing 1.4s 0.7s ease 1;
      animation-fill-mode: forwards;
      position: relative;
      margin-top:2%;

}

.bubble {
      position: absolute;
      top: -10%;
      right: 5%;
      background: red;
      color: #fff;
      width: 36rpx;
      height: 36rpx;
      font-size: 24rpx;
      border-radius: 50%;
      text-align: center;
      line-height: 34rpx;
      font-weight: 700;
}

.bounceInDown {
      animation: bounceInDown 0.9s 0.2s ease 1;
      animation-fill-mode: forwards;
}

.zoomIn {
      animation: zoomIn 0.5s 0.8s ease 1;
      animation-fill-mode: forwards;
}

.bounceIn {
      animation-name: bounceIn;
}

.hand {
      width: 120rpx;
      position: absolute;
      top: 61%;
      right: 3%;
      animation: waveUp 0.9s 0.2s ease infinite;
      animation-fill-mode: forwards;
}

.p1, .p2 {
      opacity: 0;
}

.p1 {
      width: 98%;
      margin-left: 1%;
      margin-top: 42rpx;
      position: absolute;
      top: 7%;
}

.p2 {
      width: 99%;
      margin-left: 0.5%;
      margin-top: -156rpx;
}

.btn {
      margin-top: -10rpx;
      opacity: 0;
}

.btn-sign {
      width: 56%;
      margin-left: 22%;
      animation: bounceIn 0.7s 1s ease 1;
      animation-fill-mode: forwards;
      margin-top: 20rpx;
}

.btn-sign-run {
      width: 56%;
      margin-left: 22%;
      margin-top: -30rpx;
      animation: bounceIn 0.7s 0.8s ease 1;
      animation-fill-mode: forwards;
}

.btn-sign-perform {
      width:56%;
      margin-left: 22%;
      animation: bounceIn 0.7s 1.2s ease 1;
      animation-fill-mode: forwards;
       margin-top: 20rpx;
}

.swiper {
      padding: 48px 0rpx 30rpx 0;
}

/* 兼容 */

.is_x .hand {
      top: 57%;
}
.is_x .swiper {
      margin-top: 10rpx;
}
.is_5 .swiper {
      margin-top: -34rpx;
}

.is_6 .swiper {
      margin-top: -8rpx;
}

.is_android_360_3 .swiper {
      margin-top: -12rpx;
}

.swiper image {
      width: 100%;
      height: auto;
}
