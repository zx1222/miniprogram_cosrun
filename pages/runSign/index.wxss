.panel  .start {
      width: 160rpx;
      padding-bottom: 50rpx;
}

.panel  .btn-get {
      width: 360rpx;
      padding-top: 60rpx;
}

.input-wrp.required text.valid {
      top: 21%;
}

.btn-agreement {
      width: 42%;
}

/* 确认信息是否修改 */
.confirm-tips{
      color: red;
      font-weight: bold;
      font-size: 24rpx;
}
.runInfo-wrp {
      padding: 50rpx 70rpx;
      letter-spacing: 2px;
}

.btn-confirm-wrp {
      padding-bottom: 40rpx;
}

.btn-confirm-wrp .btn {
      width: 40%;
}
